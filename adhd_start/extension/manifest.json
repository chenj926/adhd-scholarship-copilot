{
  "manifest_version": 3,
  "name": "ADHD Scholarship Copilot (Demo)",
  "version": "0.3.0",
  "description": "ADHD micro-start coach â€” demo on real pages, backend on localhost.",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*",
    "http://0.0.0.0:8000/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "ADHD Scholarship Copilot",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["focus_games.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["profile.html", "profile.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
