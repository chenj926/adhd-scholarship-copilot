{
  "manifest_version": 3,
  "name": "ADHD Scholarship Copilot (React)",
  "version": "0.4.0",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "service-worker.js" 
  },
  "action": {
    "default_title": "ADHD Scholarship Copilot",
    "default_popup": "src/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["focus_games.js", "micro_start_overlay.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/profile/index.html"],
      "matches": ["<all_urls>"]
    }
  ]
}