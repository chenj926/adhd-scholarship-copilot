{
  "manifest_version": 3,
  "name": "ADHD Scholarship Copilot",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": ["http://127.0.0.1:8000/*", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ]
}
