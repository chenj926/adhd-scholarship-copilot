{
  "manifest_version": 3,
  "name": "ADHD Scholarship Copilot",
  "version": "0.6.0",
  "permissions": [
    "storage", "alarms", "notifications", "scripting", "activeTab"
  ],
  "host_permissions": [
    "http://localhost:8000/*" 
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "ADHD Scholarship Copilot"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/focus_games.js", "content_scripts/micro_start_overlay.js"],
      "css": ["assets/style.css"], 
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "profile.html"],
      "matches": ["<all_urls>"]
    }
  ]
}